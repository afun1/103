{
  "version": 2,
  "functions": {
    "api/**/*": "nodejs18.x",
    "pages/api/**/*": "nodejs18.x"
  },
  "builds": [
    {
      "src": "api/**/*",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "pages/api/**/*", 
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}